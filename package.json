{
  "name": "moxymind",
  "version": "1.0.0",
  "description": "Moxymind technical tasks",
  "main": "index.js",
  "author": "@mishautkin",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/node": "^24.0.3",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  },
  "scripts": {
    "setup:tests": "npm install && npx playwright install",
    "lint": "eslint . --ext .ts,.tsx,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.mjs --fix",
    "test:all": "npx playwright test",
    "test:restapi": "npx playwright test --project=restapi",
    "test:saucedemo": "npx playwright test --project=saucedemo-*",
    "test:saucedemo:chrome": "npx playwright test --project=saucedemo-chrome",
    "test:saucedemo:firefox": "npx playwright test --project=saucedemo-firefox",
    "test:saucedemo:webkit": "npx playwright test --project=saucedemo-webkit"
  }
}
